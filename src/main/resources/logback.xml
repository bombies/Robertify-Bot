<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%gray(%d{HH:mm:ss.SSS}) %boldRed(%-15.-15logger{0}) %highlight(%-6level) %white(%msg%n)</pattern>
        </encoder>
    </appender>

    <logger name="org.mongodb.driver" level="WARN" additivity="true"/>

    <root level="info">
        <appender-ref ref="STDOUT" />
    </root>
    <root level="debug">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>